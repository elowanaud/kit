		"@adonisjs/cors": "^2.2.1",
		"@adonisjs/lucid": "^21.6.1",
		"@adonisjs/session": "^7.5.1",
		"@vinejs/vine": "^3.0.1",
		"luxon": "^3.6.1",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.2.2"
